<div class="modal-overlay modal--medium" zf-modal zf-closable="modal" id="deleteConfirmation">
    <div ng-controller="DeleteConfirmationController as deleteConfirmationCtrl" ng-cloak>
        <div class="modal-content">
            <h4 class="modal-title text-center">
                <span>{{deleteConfirmationCtrl.isArchivable && deleteConfirmationCtrl.archiveFilter !== 1 ? "Archive for future use or delete permanently?" : "Delete permanently?"}}</span>
            </h4>
        </div>
        <div class="modal-footer">
            <button zf-close class="button tertiary float-left">Cancel</button>
            <button ng-click="deleteConfirmationCtrl.delete()" class="button secondary">Delete</button>
            <button ng-show="deleteConfirmationCtrl.isArchivable && deleteConfirmationCtrl.archiveFilter !== 1" ng-click="deleteConfirmationCtrl.archive()" class="button">Archive</button>
        </div>
    </div>
</div>