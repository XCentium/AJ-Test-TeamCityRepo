@model NewsPage

<div class="row main-row news-page">
    <div class="medium-12 large-12 columns">
        <div class="medium-12 large-12 columns">
            <div class="news-list-header">
                @Html.Zone(Model, "News Header")
            </div>
            <div class="news-page-full">
                <h2 class="news-heading">@Model.Title</h2>
                <div class="news-publish-info"><strong>@Model.Author</strong> <em>@(Model.PublishDate.HasValue ? Model.PublishDate.Value.LocalDateTime.ToShortDateString() : "")</em></div>
                <div class="news-page-content">
                    @Html.Raw(Model.NewsContents)
                </div>
            </div>
            <div class="news-list-footer">
                @Html.Zone(Model, "News Footer")
            </div>
        </div>
    </div>
</div>