<div class="order-subtotal">
    <div class="row">
        <div class="small-6 columns sub-label">@T("Subtotal")</div>
        <div id="cartOrderSubTotalDisplay" class="small-6 columns sub-amount" ng-bind="cart.orderSubTotalWithOutProductDiscountsDisplay"></div>
    </div>
    <div class="row" ng-if="(cart.showTaxAndShipping || !isCartPage) && cart.totalTaxDisplay.length > 0">
        <div class="small-6 columns sub-label">@T("Tax")</div>
        <div id="cartTotalTaxDisplay" class="small-6 columns sub-amount" ng-bind="cart.totalTaxDisplay"></div>
    </div>
    <div class="row" ng-if="(cart.showTaxAndShipping || !isCartPage) && cart.shippingAndHandlingDisplay.length > 0">
        <div class="small-6 columns sub-label">@T("Shipping & Handling")</div>
        <div id="cartShippingAndHandlingDisplay" class="small-6 columns sub-amount" ng-bind="cart.shippingAndHandlingDisplay"></div>
    </div>
    <div class="row promo-applied" ng-repeat="promotion in promotions">
        <div class="small-6 columns sub-label">@T("Promotion"): <em><span ng-bind="promotion.name"></span></em></div>
        <div id="cartPromotionAmountDisplay" class="small-6 columns sub-amount" ng-bind="promotion.amountDisplay"></div>
    </div>
    <div class="row order-total" ng-if="(cart.showTaxAndShipping || !isCartPage)">
        <div class="small-6 columns sub-label">@T("Total")</div>
        <div id="cartOrderGrandTotalDisplay" class="small-6 columns sub-amount" ng-bind='cart.orderGrandTotalDisplay'></div>
    </div>                   
</div>
