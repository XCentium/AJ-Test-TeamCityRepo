@using Insite.Core.Providers
@using Insite.WebFramework.Mvc.Extensions
<div id="popup-productaddedtocart" class="reveal-modal small pop-allpurpose" data-reveal data-reveal-init>
    <div class="modal-wrap ">
        <div ng-show="vm.productSettings.showAddToCartConfirmationDialog">
            <h2><span ng-bind="vm.isAddAll ? '@T("Add All to Cart")' : '@T("Add to Cart")'"></span></h2>
            <p><span ng-bind="vm.isAddAll ? '@MessageProvider.Current.Cart_AllProductsAddedToCart' : '@MessageProvider.Current.Cart_ProductAddedToCart'"></span></p>
        </div>
        <div ng-show="vm.isQtyAdjusted">@Html.Message("Cart_QuantityAdjusted", "The quantity added to the cart was changed due to rounding or minimum quantity rules.")</div>
        <a id="genericPopupCloseButton" class="close-reveal-modal">&#215;</a>
    </div>
</div>