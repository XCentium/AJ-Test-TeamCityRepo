@model ThreeColumn

<div class="@Model.CssClass">
    <div class="row">
        <div class="medium-@Model.LeftColumnSize large-@Model.LeftColumnSize columns">
            @Html.Zone(Model, "LeftColumn")
        </div>
        <div class="medium-@Model.CenterColumnSize large-@Model.CenterColumnSize columns">
            @Html.Zone(Model, "CenterColumn")
        </div>
        <div class="medium-@Model.RightColumnSize large-@Model.RightColumnSize columns">
            @Html.Zone(Model, "RightColumn")
        </div>
    </div>
</div>