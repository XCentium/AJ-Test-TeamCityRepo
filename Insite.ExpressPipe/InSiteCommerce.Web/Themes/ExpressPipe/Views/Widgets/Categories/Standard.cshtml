@using Insite.Data.Entities;

@model Morsco.Customizations.Lib.Widgets.Categories

<div class="@Model.CssClass">
    <h5>@T("Products")</h5>
    <div class="cat-container">
        <ul>
            @{
                foreach (Category category in Model.Cats)
                {
                    if (category.Name != "Default")
                    {
                        <li><a href="/catalog/@category.UrlSegment">@category.Name</a></li>
                    }
                }
            }
        </ul>
    </div>
</div>